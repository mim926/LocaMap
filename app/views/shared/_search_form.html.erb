<%= search_form_for @q, url: root_path, method: :get do |f| %>
  <%= f.collection_select :category_id_eq, Category.all, :id, :name, include_blank: 'カテゴリー選択' %>
  <%= f.collection_select :prefecture_id_eq, Prefecture.all, :id, :name, include_blank: '地域選択' %>
  <div data-controller="autocomplete" data-autocomplete-url-value="<%= autocomplete_posts_path %>" role="combobox">
    <%= f.search_field :title_or_description_cont, class: 'form-control', data: { autocomplete_target: 'input' }, placeholder: '検索ワード' %>
    <%= f.hidden_field :title, data: { autocomplete_target: 'hidden' } %>
    <ul class="list-group" data-autocomplete-target="results"></ul>
  </div>
  <%= f.submit '検索', class: 'btn btn-primary' %>
<% end %>
