<% signed_in = false %>

<div class="navbar bg-base-100 shadow-sm px-4 flex justify-between items-center">
  <!-- 左側：ロゴ -->
  <div class="flex-1">
    <%= link_to 'LocaMap', root_path, class: 'btn btn-ghost normal-case text-xl' %>
  </div>

  <!-- 右側：条件分岐による動的ナビ -->
  <div class="flex-none">
    <% if request.path == '/users/sign_up' %>
      <!-- ユーザー登録ページ：ヘッダー右側非表示 -->

    <% elsif signed_in %>
      <!-- ログイン後（仮） -->
      <ul class="menu menu-horizontal px-1">
        <li><%= link_to '新規投稿', '#', class: 'btn btn-ghost' %></li>
        <li>
          <%= link_to 'ログアウト', '#',
                      class: 'btn btn-outline ml-2',
                      data: { turbo_method: :delete } %>
        </li>
      </ul>

    <% else %>
      <!-- トップページ（未ログイン） -->
      <%= link_to 'ユーザー登録', '#', class: 'btn btn-primary mr-2' %>
      <%= link_to 'ログイン', '#', class: 'btn btn-outline' %>
    <% end %>
  </div>
</div>
