  <div
    class="hero min-h-screen relative"
    style="background-image: url('<%= asset_path('local.image.jpeg') %>'); background-size: cover; background-position: center;"
  >
    <div class="hero-overlay bg-opacity-60"></div>
    <div class="hero-content absolute bottom-0 right-0 p-6 text-neutral-content text-center">
      <div class="max-w-md">
