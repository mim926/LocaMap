<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <div class="text-center lg:text-left mb-8">
      <h1 class="text-5xl font-bold mb-6"><%= t('devise.sessions.new.title') %></h1>
    </div>

    <div class="card w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <%= form_with(scope: :user, url: user_session_path, local: true, class: "space-y-6") do |f| %>
          <div>
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, class: "input input-bordered w-full", required: true, autofocus: true %>
          </div>

          <div>
            <%= f.label :password, class: "label" %>
            <%= f.password_field :password, class: "input input-bordered w-full", required: true %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit t('devise.sessions.new.login'), class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="mt-4 text-center">
          <%= link_to t('devise.shared.links.sign_up'), new_user_registration_path, class: "link link-hover" %>
        </div>
      </div>
    </div>
  </div>
</div>
