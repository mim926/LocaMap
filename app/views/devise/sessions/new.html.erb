<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <div class="text-center lg:text-left mb-8">
      <h1 class="text-5xl font-bold mb-6"><%= t('devise.sessions.new.title') %></h1>
    </div>

    <div class="card w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <%= form_with(scope: :user, url: user_session_path, local: true, class: "space-y-6") do |f| %>
          <div>
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, class: "input input-bordered w-full", required: true, autofocus: true %>
          </div>

          <div>
            <%= f.label :password, class: "label" %>
            <%= f.password_field :password, class: "input input-bordered w-full", required: true %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit t('devise.sessions.new.login'), class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <%= link_to user_google_oauth2_omniauth_authorize_path,
            class: "btn btn-outline btn-google w-full flex items-center justify-center gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" class="w-5 h-5">
            <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.23 9.22 3.64l6.84-6.84C35.64 2.94 30.2 0 24 0 14.64 0 6.51 5.79 2.69 14.19l7.96 6.18C12.15 13.91 17.6 9.5 24 9.5z"/>
            <path fill="#34A853" d="M46.98 24.5c0-1.59-.14-3.13-.39-4.61H24v9.07h12.94c-.56 2.98-2.22 5.5-4.73 7.18l7.33 5.69C43.41 38.2 46.98 31.91 46.98 24.5z"/>
            <path fill="#4A90E2" d="M9.65 28.37c-1.02-2.98-1.02-6.25 0-9.23l-7.96-6.18C.65 17.79 0 20.83 0 24c0 3.17.65 6.21 1.69 9.04l7.96-6.18z"/>
            <path fill="#FBBC05" d="M24 48c6.2 0 11.64-2.05 15.52-5.57l-7.33-5.69C29.85 38.45 27.05 39.5 24 39.5c-6.4 0-11.85-4.41-13.35-10.39l-7.96 6.18C6.51 42.21 14.64 48 24 48z"/>
          </svg>
          Googleでログイン
        <% end %>

        <div class="mt-4 text-center">
          <%= link_to t('devise.shared.links.sign_up'), new_user_registration_path, class: "link link-hover" %>
        </div>
      </div>
    </div>
  </div>
</div>
