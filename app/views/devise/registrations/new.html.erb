<h2 class="text-3xl font-bold mb-6 text-center"><%= t('devise.registrations.new.title') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4 w-full max-w-md mx-auto" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :name, class: "label" %>
    <%= f.text_field :name, class: "input input-bordered w-full", placeholder: t('helpers.placeholder.name') %>
  </div>

  <div>
    <%= f.label :prefecture_id, class: "label" %>
    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name,
        { prompt: t('helpers.placeholder.select_prefecture') },
        { class: "select select-bordered w-full" } %>
  </div>

  <div>
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, class: "input input-bordered w-full", placeholder: t('helpers.placeholder.email') %>
  </div>

  <div>
    <%= f.label :password, class: "label" %>
    <% if @minimum_password_length %>
      <span class="text-sm text-gray-500">（<%= @minimum_password_length %>文字以上）</span>
    <% end %>
    <%= f.password_field :password, class: "input input-bordered w-full", placeholder: t('helpers.placeholder.password') %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "label" %>
    <%= f.password_field :password_confirmation, class: "input input-bordered w-full", placeholder: t('helpers.placeholder.password_confirmation') %>
  </div>

  <div class="text-center">
    <%= f.submit t('helpers.submit.create'), class: "btn btn-primary w-full" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
