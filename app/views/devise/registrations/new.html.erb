<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <div class="text-center mb-8">
      <h1 class="text-5xl font-bold mb-6"><%= t('devise.registrations.new.title') %></h1>
    </div>

    <div class="card w-full max-w-4xl shadow-2xl bg-base-100">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div>
            <%= f.label :name, class: "label" %>
            <%= f.text_field :name, class: "input input-bordered w-full", placeholder: t('helpers.placeholder.name') %>
          </div>

          <div>
            <%= f.label :prefecture_id, class: "label" %>
            <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name,
              { prompt: t('helpers.placeholder.select_prefecture') },
              { class: "select select-bordered w-full" } %>
          </div>

          <div>
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, class: "input input-bordered w-full", placeholder: t('helpers.placeholder.email') %>
          </div>

          <div>
            <%= f.label :password, class: "label" %>
            <%= f.password_field :password, class: "input input-bordered w-full", placeholder: t('helpers.placeholder.password') %>
          </div>

          <div>
            <%= f.label :password_confirmation, class: "label" %>
            <%= f.password_field :password_confirmation, class: "input input-bordered w-full", placeholder: t('helpers.placeholder.password_confirmation') %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit t('helpers.submit.create'), class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="mt-4 text-center">
          <%= link_to t('devise.shared.links.sign_in'), new_user_session_path, class: "link link-hover" %>
        </div>
      </div>
    </div>
  </div>
</div>
