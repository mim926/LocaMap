<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6"><%= t('post.new.title') %></h1>

  <%= form_with model: @post, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :title, class: "label font-medium" %>
      <%= f.text_field :title, class: "input input-bordered w-full", placeholder: t('helpers.placeholder.title') %>
    </div>

    <div>
      <%= f.label :prefecture_id, class: "label font-medium" %>
      <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name,
        { prompt: t('helpers.placeholder.select_prefecture') },
        { class: "select select-bordered w-full" } %>
    </div>

    <div>
      <%= f.label :category_id, class: "label font-medium" %>
      <%= f.collection_select :category_id, Category.all, :id, :name,
        { prompt: t('helpers.placeholder.select_category') },
        { class: "select select-bordered w-full" } %>
    </div>

    <div>
      <%= f.label :address, class: "label font-medium" %>
      <%= f.text_field :address, class: "input input-bordered w-full", placeholder: t('helpers.placeholder.address') %>
    </div>

    <div>
      <%= f.label :description, class: "label font-medium" %>
      <%= f.text_area :description, rows: 10, class: "textarea textarea-bordered w-full", placeholder: t('helpers.placeholder.description') %>
    </div>

    <%= f.submit t('.submit', default: '送信'), class: "btn btn-primary" %>
  <% end %>
</div>
